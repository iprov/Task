const pie = 3.14
class cylinder{
    constructor(tradius,theight){
        this.radius = tradius;
        this.height = theight;
    }
    getVolume(){
        return (pie * this.radius * this.radius * this.height);
    }
}
class sphere{
    constructor(tradius,theight){
        this.radius = tradius;
        this.height = theight;
    }
    getVolume(){
        return (pie * this.radius * this.radius * this.radius * 4 / 3);
    }
}
class cone{
    constructor(tradius,theight){
        this.radius = tradius;
        this.height = theight;
    }
    getVolume(){
        return (pie * this.radius * this.radius * this.height / 3);
    }
}

let obj4Cylinder = new cylinder(5,5);
let obj4Sphere = new sphere(5,5);
let obj4Cone = new cone(5,5);

console.log(obj4Cylinder.getVolume());
console.log(obj4Sphere.getVolume());
console.log(obj4Cone.getVolume());
